<p id="notice"><%= notice %></p>
<div class="fotos">
<h1>Photo list</h1>
<div class="container table">
<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fotos.each do |foto| %>
      <tr>
        <td><%= image_tag foto.image.url(:medium) %></td>
        <td><%= foto.description %></td>
          <td><%= link_to 'Pokaż', foto %></td>
                  <% if foto.user == current_user %>
          <td><%= link_to 'Edytuj', edit_foto_path(foto) %></td>
          <td><%= link_to 'Usuń', foto, method: :delete, data: { confirm: 'Jesteś pewny ?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="row">
  <div class="col-md-5">
  </div>
<div class="col-md-2">
<div class="plus">
<%= link_to '+', new_foto_path %>
</div>
</div>

<div class="col-md-5">
</div>
</div>
