<p id="notice"><%= notice %></p>

<h1>Lista zdjęć</h1>

<table>
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fotos.each do |foto| %>
      <tr>
        <td><%= image_tag foto.image.url(:medium) %></td>
        <td><%= foto.description %></td>
          <td><%= link_to 'Pokaż', foto %></td>
                  <% if foto.user == current_user %>
          <td><%= link_to 'Edytuj', edit_foto_path(foto) %></td>
          <td><%= link_to 'Usuń', foto, method: :delete, data: { confirm: 'Jesteś pewny ?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowe zdjęcie', new_foto_path %>
